<% if flash.any? %>
<div id="flash-container">
   <div class="row">
      <div class="col-md-12">
    <% flash.each do |key, value| -%>
      <div class="flash-alert flash-alert-<%= key %>">
            <i class="fa fa-info" aria-hidden="true"></i> <%= value %></div>
    <% end -%>
  </div>
  </div>
  </div>
<% end %>

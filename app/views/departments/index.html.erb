<div>
	<h2>Departments</h2>
	<%= link_to("Add New Department", new_department_path, :class => 'action new') %>
	<table>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Actions</th>
		</tr>
		<% @departments.each do |m| %>
		<tr>
			<td><%= m.id %></td>
			<td><%= m.name %></td>
			<td>
				<%= link_to("Show", department_path(m), :class => 'action show') %>
				<%= link_to("Edit", edit_department_path(m), :class => 'action edit') %>
				<%= link_to("Delete", delete_department_path(m), :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
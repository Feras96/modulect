<% if @course && @course.errors.size > 0 %>
    <div id="error-explanation" class="alert alert-danger fade in">
      <h2><%= pluralize(@course.errors.size, "error") %> prohibited this record from being saved</h2>
      <p>There were problems with the following fields:</p>
      <ul>
        <% @course.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<%end%>
<% provide(:title, 'Register') %>
<div class="container">
  <div class="row">
    <%= form_for(@course) do |f|%>

        <div class="form-group" style="margin-top:10px;">
          <label for="inputName" class="sr-only">Course name</label>
          <%= f.text_field :name, placeholder: 'Enter name', autofocus: 'true' %>
        </div>
        <div class="form-group">
          <label for="inputName" class="sr-only">Description</label>
          <%= f.text_area(:description,placeholder: "Enter description of course") %>
        </div>
        <%= f.submit("Finalize change",:url=>{:action => :update},:html => { :method => 'POST' },:class=>"btn btn-secondary " )  %>




    <%end%>
  </div>
</div>

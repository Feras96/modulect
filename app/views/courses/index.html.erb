<div class="center container center-align">
  <div class="ui very padded fluid vertical segment">
    <table class="ui celled padded table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr></thead>
      <tbody>
      <% @courses.each do |s| %>

          <tr>
            <td>
              <h2 class="ui"><%= s.name %></h2>
            </td>
            <td class="single center-align center line">
              <%= s.description %>
            </td>
            <td><%= link_to("delete",{:action=>:destroy,:id=>s.id},:method => :delete)%>   <%= link_to("edit",{:action=>:edit,:id=>s.id})%>  <%= link_to("show",{:action=>:show,:id=>s.id})%></td>
          </tr>

      <%end%>
      </tbody>
    </table>
    <%= form_for(:courses,:url=>{:action => :new},:html => { :method => 'GET' }) do |f| %>
        <%= submit_tag("Add Course",:class=>"ui blue right float  medium btn large button")%>
    <% end%>

  </div>

</div>
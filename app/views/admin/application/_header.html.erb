<div id="top-strip"></div>
<header class="navbar navbar-default" id="admin-header" style="margin-top:2px;">
   <div class="container-fluid">
      <div class="col-md-3" style="float: left;">
         <a href="#menu-toggle" id="menu-toggle"><i class="fa fa-bars" aria-hidden="true"></i>
         <%= image_tag( "modulect-logo.png", :alt=> "Modulect", :style => "height: 45px;margin-left:18px") %></a>

         <span class="open-app">
 	        <%= link_to " <i class='fa fa-external-link' aria-hidden='true'></i>".html_safe, root_path, target: :blank, method: :get %>
         </span>
      </div>
      <div class="col-md-6 remove-small-mobile">
         <div class="search-area no-mobile-search" style="width:100%;">
            <%= content_for(:search) %>
         </div>
      </div>
      <div class="col-md-3">
         <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right" style="margin-top: -5px;">
               <li class="dropdown" style="margin-left:15px;">


<style>
.admin-top-button {    background: none;
    box-shadow: none;
    color: #333;
    border-left: 1px solid #dfe2e1;
    border-radius: 0px;
    margin-top: -11px;
    height: 70px;
    text-shadow: none;
    margin-right: -25px;
    padding-left: 40px;
    padding-right:40px;}
    .admin-top-button:hover{
   opacity: 1;background: #2ab27b;}
    </style>

                  <button class="admin-top-button dropdown-toggle mobile-12-margin" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span style="font-weight:normal">Logged in as:</span> <%= current_user.first_name + " " + current_user.last_name %> <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" style="width: 100%;">
                     <li><%= link_to "My Details", edit_user_path(current_user), target: :blank, method: :get %>
                     <li role="separator" class="divider"></li>
                     <li>
                        <%= link_to "Log out", logout_path, method: "delete" %>
                     </li>
                  </ul>
               </li>
            </ul>
         </div>
      </div>
   </div>
</header>
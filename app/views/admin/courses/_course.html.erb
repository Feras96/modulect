<tr class="table__row" data-url="<%= edit_admin_course_path(course) %>" role="link" tabindex="0">
  <td class="no-link checkboxes">
     <div class="checkbox" style="margin:0px; display: inline-block;">
        <input type="checkbox" name="check_action[]" id="check_individual" value="<%= course.id %>" class="toggle-bulk" /><label for="check_individual"></label>
     </div>
     <% if !course.all_year_structures_defined? %>
       <%= render partial: "admin/layouts/index_warning", locals: {message: "This course has an undefined year structure", 
                                                                   destination: edit_admin_course_path(course)} %>
    <% end %>
  </td>
  <td class="cell-data cell-data--string"><%= course.name %></td>
  <td class="cell-data cell-data--string"><%= course.year %></td>
  <td class="cell-data cell-data--string"><%= get_num_departments_for_course(course) %></td>
  <td class="no-link">
     <div class="col-md-3"><a class="action-edit" href="<%= edit_admin_course_path(course) %>"><i class="fa fa-pencil" aria-hidden="true" ></i>&nbsp;&nbspEdit</a></div>
     <div class="col-md-3"><%= link_to "<i class='fa fa-trash' aria-hidden='true'></i> Delete".html_safe, admin_course_path(course), method: :delete,
        data: { confirm: "Are you sure you want to delete this course?" } , class: "table__action--destroy" %></div>
  </td>
</tr>

<% provide(:title, 'Faculties') %>


<header class="header">
  <h1 class="header__heading" id="page-title">Faculties
</h1>
  <div class="header__actions">
   <a class="button" href="<%= new_admin_faculty_path %>"><i class='fa fa-plus' aria-hidden='true'></i>&nbsp;&nbsp;New faculty</a>
  </div>
</header>

<!--checks if this table is being rendered within show of faculity-->
<div class="table-responsive">
<table class="collection-data table" aria-labelledby="page-title">
  <thead>
  <tr>
        <th class="cell-label
        cell-label--string
        cell-label--false
        " scope="col">
              Name
</th>
        <th class="cell-label
        cell-label--has-many
        cell-label--false
        " scope="col">
             Departments Accessible
   </th>
        <th class="cell-label
        cell-label--date-time
        cell-label--false
        " scope="col">
             Created At
  </th>
    <th colspan="2" scope="col"></th>
  </tr>
  </thead>

  <tbody>

<% @faculties.each do |faculty | %>

 <tr class="table__row"
          role="link"
          tabindex="0"
          data-url="<%= edit_admin_faculty_path(faculty) %>"
      >
            <td class="cell-data cell-data--string">
              
<%= faculty.name %>

            </td>
            <td class="cell-data cell-data--has-many">
              
X departments

            </td>
            <td class="cell-data cell-data--date-time">
              
  
<%= faculty.created_at %>

            </td>

        <td><a class="action-edit" href="<%= edit_admin_faculty_path(faculty) %>"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;&nbspEdit</a>

          <!--if table is not being rendered in show, add a delete button which removes record-->

          <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>&nbsp;&nbspDelete'.html_safe, admin_faculty, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>


<% end %>

  </tbody>
</table>
</div>
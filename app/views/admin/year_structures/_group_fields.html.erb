<div class="nested-fields">
  <div class="field">
    <%= f.label :name, placeholder: 'i.e: Semester 1' %>
    <%= f.text_field :name, class: "nested-field-name" %>

    <%= f.label :min_credits, 'Minimum credits' %>
    <%= f.number_field :min_credits, class: "nested-field-min-credits" %>

    <%= f.label :max_credits, 'Maximum credits' %>
    <%= f.number_field :max_credits, class: "nested-field-max-credits" %>

    <%= f.label :uni_modules %>
    <div id="select-modules">
      <%= f.select :uni_module_ids, possible_uni_modules_for_new_group.collect {|x| [x.to_s, x.id]}, {},
      :multiple => true, class: 'selectize' %>
    </div>

    <p>
      <%= f.check_box :compulsory, class: "nested-field-checkbox" %>
      <%= f.label "All Modules Compulsory" %>
    </p>
  </div>

  <div class="remove-field">
    <%= link_to_remove_association "Remove Module Group", f %>
  </div>
</div>

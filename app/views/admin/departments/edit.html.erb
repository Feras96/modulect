<% content_for(:title) { "Edit #{Department.find(params[:id]).name}" } %>


<header class="header">
  <h1 class="header__heading"><%= content_for(:title) %></h1>
  <div class="header__actions">
    <%= link_to(
            "<i class='fa fa-times' aria-hidden='true'></i>&nbsp;&nbsp;Quit".html_safe,
        admin_departments_path,
            class: "button",
        ) %>
  </div>
</header>
<%= form_for(@department, :url => { :action => "update",:method => "put" }, html: {class: "form"})do |f| %>
    <%= render "form", f: f,parent: "edit"%>
<% end %>
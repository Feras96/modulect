   .side-right .dropdown-toggle:hover,
   .side-right .dropdown-toggle:focus,
   .side-right .dropdown-toggle:active {
   background: whitesmoke;
   color: #333;
   box-shadow: 0px 3px 0px 0px #dfe2e1;
   outline: none;
   width:130px;

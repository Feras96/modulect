<% provide(:title, 'Modules') %>
	<header class="header">
		<h1 class="header__heading" id="page-title">Modules</h1>
		<div class="header__actions">
			<a class="button" href="%3C%=%20new_admin_uni_module_path%20%%3E"><i aria-hidden='true' class='fa fa-plus'></i>&nbsp;&nbsp;New uni module</a>
		</div>
	</header>
	<div class="table-responsive">
		<table aria-labelledby="page-title" class="collection-data table">
			<thead>
				<tr>
					<th class="cell-label cell-label--string cell-label--false" scope="col">Name</th>
					<th class="cell-label cell-label--string cell-label--false" scope="col">Code</th>
					<th class="cell-label cell-label--string cell-label--false" scope="col">Semester</th>
				</tr>
			</thead><%= will_paginate %><%@uni_modules.each do |uni_module| %>
			<tbody>
				<tr class="table__row" data-url="<%= edit_admin_uni_module_path(uni_module) %>" role="link" tabindex="0">
					<td class="cell-data cell-data--string"><%= uni_module.name %></td>
					<td class="cell-data cell-data--string"><%= uni_module.code %></td>
					<td class="cell-data cell-data--string"><%= make_semester_nice uni_module.semester %></td>
					<td>
						<span style="margin-right:10px;"><a class="action-edit" href="<%= edit_admin_uni_module_path(uni_module) %>"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;&nbspEdit</a></span>

						<span style="margin-right:10px;"><%= link_to "<i class='fa fa-external-link' aria-hidden='true'></i> View".html_safe, uni_module, method: :get, target: :blank %></span>

						 <a class="table__action--destroy" data-confirm="Are you sure?" data-method="delete" href="/admin/uni_modules/2" rel="nofollow"><i aria-hidden="true" class="fa fa-trash"></i>&nbsp;&nbspDelete</a>
					</td>
				</tr><%end %>
			</tbody>
		</table><%= will_paginate @uni_modules %>
	</div>
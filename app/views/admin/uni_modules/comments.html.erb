<header class="header index-header-area">
  <h1 id="page-title"><%= @uni_module.name %> Reviews</h1>
</header>
<table>
  <thead>
  <tr>
    <th class="cell-label cell-label--string cell-label--false" scope="col">User</th>
    <th class="cell-label cell-label--string cell-label--false" scope="col">Body</th>
    <th class="cell-label cell-label--string cell-label--false" scope="col">Rating</th>
    <th class="cell-label cell-label--string cell-label--false" scope="col">Available actions</th>
  </tr>
  </thead>
  <% @uni_module.comments.each do |comment| %>
      <tr class="table__row" data-url="#row-<%=comment.id %>" tabindex="0" id="row-<%= comment.id %>">
        <% user_id = User.find(comment.user_id)%>
        <td class="no-link cell-data cell-data--string"><%= user_id.first_name %> <%=user_id.last_name %></td>
        <td class="cell-data cell-data--string"><%= comment.body%></td>
        <td class="cell-data cell-data--string"><%= comment.rating%></td>
        <td><div class="col-md-3"><%= link_to "<i class='fa fa-trash' aria-hidden='true'></i> Delete".html_safe,
                                              uni_module_comment_path(@uni_module, comment), method: :delete,
                                              data: { confirm: "Are you sure you want to delete this module?" } ,
                                              class: "table__action--destroy" %></div></td>
      </tr>
  <%end%>
</table>


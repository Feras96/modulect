<div id="page">
<div class="container">
<div class="row">
   <div class="col-md-5 col-md-offset-1">
      <div class="col-md-12 login-card">
         <h2>Log in</h2>
         <div id="login-area">
            <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group">
               <label for="inputEmail" class="sr-only">Email address</label>
               <%= f.email_field :email, class: 'form-control', placeholder: 'Email: first.last@kcl.ac.uk', autocomplete: 'off', autofocus: true %>
            </div>
            <div class="form-group">
               <label for="inputPassword" class="sr-only">Password</label>
               <%= f.password_field :password, placeholder: 'Password',  class: 'form-control' %>
               <%= link_to "(forgot password)", new_password_reset_path %>
            </div>
            <div class="form-group">
               <div class="checkbox">
                  <%= f.check_box :remember_me, checked: 'checked' %>
                  <%= f.label :remember_me do %>
                  <span>Remember me</span>
                  <% end %>
               </div>
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-block" type="submit">Log in&nbsp;&nbsp;<i class="fa fa-angle-right" aria-hidden="true"></i>
               </button>
            </div>
            <div class="form-group">
               <p style="margin-top:30px;"><%= link_to "Forgot your password?", new_password_reset_path %>
               </p>
            </div>
            <% end %>
         </div>
      </div>
   </div>
   <div class="col-md-5">
      <div class="col-md-12 login-card">
         <h2>Register</h2>
         <p>It's quick and simple to register. Once signed up, you can use Modulect as you want.</p>
         <div style="margin-top:20px;"><a href="/signup" class="btn btn-lg btn-block">register&nbsp;&nbsp;<i class="fa fa-angle-right" aria-hidden="true"></i></a>
         </div>
      </div>
   </div>
</div>

<% if @tag && @tag.errors.size > 0 %>
    <div id="error-explanation" class="alert alert-danger fade in">
      <h2><%= pluralize(@tag.errors.size, "error") %> prohibited this record from being saved</h2>
      <p>There were problems with the following fields:</p>
      <ul>
        <% @tag.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<%end%>
<div class="ui container">
  <%= form_for(@tag,url: tag_path(@tag),:as => :tag) do |f|%>

      <div class="form-group" style="margin-top:10px;">
        <label for="inputName" class="sr-only">Tag name</label>
        <%= f.text_field :name, placeholder: 'First name', autofocus: 'true' %>
      </div>
      <div class="form-group">
        <label for="inputName" class="sr-only">Type</label>
        <%= f.select(:type, [ 'InterestTag', 'CareerTag' ], {}) %>
      </div>
<%= f.submit("Finalize change",:url=>{:action => :update},:html => { :method => 'POST' },:class=>"btn btn-secondary " )  %>




<%end%>

</div>
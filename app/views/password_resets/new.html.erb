<%#
   Page where a user can change request a password reset after verifying their email address.
%>
<% provide(:title, 'Password reset') %>
<div id="page">
<div class="container" style="margin-top:25px;">
<div class="row">
   <div class="col-md-6 col-md-offset-3">
      <div class="col-md-12  login-card">

      <% if logged_in? %>
         <h2>Change password</h2>
      <% else %>
         <h2>Password reset</h2>
      <% end %>
         <div id="login-area">
            <%= form_for(:password_reset, url: password_resets_path) do |f| %>
            <div class="form-group">
               <label for="inputEmail" class="sr-only">Email address</label>
               <%= f.email_field :email, id: "inputEmail",
                                         class: "form-control",
                                         placeholder: "first.last@kcl.ac.uk",
                                         autofocus: true %>
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-block" type="submit">
                 Reset password&nbsp;&nbsp;<i class="fa fa-angle-right" aria-hidden="true"></i>
               </button>
            </div>
            <% if !logged_in? %>
            <div class="form-group">
               <p style="margin-top:30px;"><%= link_to "< Want to login instead?", login_path %>
               </p>
            </div>
            <% end %>
            <% end %>
         </div>
      </div>
   </div>
</div>
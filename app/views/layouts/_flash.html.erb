<%#
   Flash messages used across the site.
%>
<div class="container" id="flash-container">
   <div class="row">
      <div class="col-md-12">
         <% flash.each do |message_type, message| %>
         <% if message_type == "danger" %>
         <div class="flash-alert flash-alert-error">
            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
            <%= content_tag(:span, message) %>
         </div>
         <% end %>
         <% if message_type == "success" %>
         <div class="flash-alert flash-alert-success">
            <i class="fa fa-check" aria-hidden="true"></i>
            <%= content_tag(:span, message) %>
         </div>
         <% end %>
         <% if message_type == "notice" %>
         <div class="flash-alert flash-alert-notice">
            <i class="fa fa-info" aria-hidden="true"></i>
            <%= content_tag(:span, message) %>
         </div>
         <% end %>
         <% if message_type == "warning" %>
         <div class="flash-alert flash-alert-warning">
            <i class="fa fa-info" aria-hidden="true"></i>
            <%= content_tag(:span, message) %>
         </div>
         <% end %>
          <% if message_type == "error" %>
         <div class="flash-alert flash-alert-error">
            <i class="fa fa-info" aria-hidden="true"></i>
            <%= content_tag(:span, message) %>
         </div>
         <% end %>
         <% end %>
      </div>
   </div>
</div>


